<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<w:document xmlns:w="http://schemas.openxmlformats.org/wordprocessingml/2006/main">
  <w:body>
    <w:p>
      <w:r>
        <w:t>Dear (((customer.name))),</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:r>
        <w:t>Thank you for your order #(((order.number))). Your total is $(((order.total))).</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:r>
        <w:t>Delivery address: (((customer.address)))</w:t>
      </w:r>
    </w:p>
    <w:p>
      <w:r>
        <w:t>(((DeletePageIfEmpty=optional.content)))</w:t>
      </w:r>
    </w:p>
  </w:body>
</w:document>